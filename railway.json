{
    "build": {
      "builder": "nixpacks"
    },
    "deploy": {
      "startCommand": ". /opt/venv/bin/activate && exec uvicorn app.main:app --host 0.0.0.0 --port $PORT",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "env": {
      "UVICORN_LOOP": "asyncio"
    }
  }